<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home2">

    <fragment
        android:id="@+id/cinema2"
        android:name="com.example.movietopchart.ui.mainUI.Cinema"
        android:label="fragment_cinema"
        tools:layout="@layout/fragment_cinema" />


    <fragment
        android:id="@+id/home2"
        android:name="com.example.movietopchart.ui.mainUI.Home"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home2_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/movies2"
        android:name="com.example.movietopchart.ui.mainUI.Movies"
        android:label="fragment_movies"
        tools:layout="@layout/fragment_movies" >
        <action
            android:id="@+id/action_movies2_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="com.example.movietopchart.ui.additionUI.MovieDetailsFragment"
        android:label="fragment_movie_details"
        tools:layout="@layout/fragment_movie_details" >
        <action
            android:id="@+id/action_movieDetailsFragment_to_home2"
            app:destination="@id/home2" />
        <action
            android:id="@+id/action_movieDetailsFragment_to_movies2"
            app:destination="@id/movies2" />
    </fragment>
</navigation>